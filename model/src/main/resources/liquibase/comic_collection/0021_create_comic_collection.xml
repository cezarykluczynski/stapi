				baseTableName="comic_collections_comics"
				baseTableSchemaName="stapi"
				constraintName="ccc2_character_fkey"
				referencedColumnNames="id"
				referencedTableName="comics"
				referencedTableSchemaName="stapi"/>
	</changeSet>
</databaseChangeLog>
