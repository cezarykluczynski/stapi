<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
	<changeSet id="0022_create_throttle" author="cezarykluczynski">
		<createTable schemaName="stapi" tableName="throttle">
			<column name="id" type="bigint">
				<constraints unique="true" nullable="false"/>
			</column>
			<column name="throttle_type" type="varchar(16)">
				<constraints nullable="false"/>
			</column>
			<column name="ip_address" type="varchar(39)">
				<constraints nullable="true" unique="true"/>
			</column>
			<column name="api_key" type="varchar(66)">
				<constraints nullable="true" unique="true"/>
			</column>
			<column name="hits_limit" type="int"/>
			<column name="remaining_hits" type="int"/>
			<column name="last_hit_time" type="datetime"/>
		</createTable>
		<createSequence incrementBy="1" sequenceName="throttle_sequence"/>
	</changeSet>
</databaseChangeLog>
